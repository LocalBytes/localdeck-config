{
  "name": "@localbytes/localdeck-codegen",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "prepare": "ts-patch install && tsc",
    "esphome": "run-s prepare build:*",
    "prod": "run-s prepare build:yaml:prod build:bin:prod run:prod",
    "build:yaml": "run-p build:yaml:*",
    "build:yaml:prod": "node --loader ts-node/esm ./src/esphome-localdeck-stock.ts > ./esphome-localdeck.yaml",
    "build:yaml:test": "node --loader ts-node/esm ./src/esphome-localdeck-test.ts > ./esphome-localdeck-test.yaml",
    "build:bin": "run-p build:bin:*",
    "build:bin:prod": "esphome compile ./esphome-localdeck.yaml",
    "build:bin:test": "esphome compile ./esphome-localdeck-test.yaml",
    "run:prod": "esphome run ./esphome-localdeck.yaml",
    "run:test": "esphome run ./esphome-localdeck-test.yaml",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "private": true,
  "dependencies": {
    "esphome-config-ts": "github:LocalBytes/esphome-config-ts",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/recommended": "^1.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.14.10",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "typescript-transform-paths": "^3.4.7"
  }
}
